<UserControl x:Class="OptimizationIssues.Views.KnapsackView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:local="clr-namespace:OptimizationIssues.ViewModels"
             x:Name="KnapsackViewControl">
    <UserControl.DataContext>
        <local:KnapsackViewModel />
    </UserControl.DataContext>
    <Grid>
        <TextBlock Text="Pojemność plecaka:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10">
            <TextBlock.ToolTip>
                <ToolTip>
                    <TextBlock>
                    Wprowadź pojemność plecaka.<LineBreak/>
                    Należy podać liczbę całkowitą (np. 50).
                    </TextBlock>
                </ToolTip>
            </TextBlock.ToolTip>
    </TextBlock>
        <TextBox x:Name="CapacityTextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,30,10,0" Width="200">
            <TextBox.ToolTip>
                <ToolTip>
                    <TextBlock>
                    Wprowadź pojemność plecaka.<LineBreak/>
                    Należy podać liczbę całkowitą (np. 50).
                    </TextBlock>
                </ToolTip>
            </TextBox.ToolTip>
        </TextBox>

        <TextBlock Text="Wagi przedmiotów:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,70,10,0">
            <TextBlock.ToolTip>
                <ToolTip>
                    <TextBlock>
                    Wprowadź wagi przedmiotów, oddzielając je przecinkami.<LineBreak/>
                    Przykład: 10,20,15,5
                    </TextBlock>
                </ToolTip>
            </TextBlock.ToolTip>
    </TextBlock>
        <TextBox x:Name="WeightsTextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,100,10,0" Width="200">
            <TextBox.ToolTip>
                <ToolTip>
                    <TextBlock>
                    Wprowadź wagi przedmiotów, oddzielając je przecinkami.<LineBreak/>
                    Przykład: 10,20,15,5
                    </TextBlock>
                </ToolTip>
            </TextBox.ToolTip>
        </TextBox>

        <TextBlock Text="Wartości przedmiotów:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,140,10,0">
            <TextBlock.ToolTip>
                <ToolTip>
                    <TextBlock>
                    Wprowadź wartości przedmiotów, oddzielając je przecinkami.<LineBreak/>
                    Przykład: 60,100,120,50
                    </TextBlock>
                </ToolTip>
            </TextBlock.ToolTip>
    </TextBlock>
        <TextBox x:Name="ValuesTextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,170,10,0" Width="200">
            <TextBox.ToolTip>
                <ToolTip>
                    <TextBlock>
                    Wprowadź wartości przedmiotów, oddzielając je przecinkami.<LineBreak/>
                    Przykład: 60,100,120,50
                    </TextBlock>
                </ToolTip>
            </TextBox.ToolTip>
        </TextBox>

        <Button Content="Rozwiąż problem" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,210,0,0" Width="200" Click="SolveButton_Click"/>
    </Grid>
</UserControl>
